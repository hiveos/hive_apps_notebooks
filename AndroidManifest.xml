<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hive.apps.notebooks"
    android:versionCode="3"
    android:versionName="dev" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:theme="@style/Theme.Notebooks" >
        <activity
            android:name="hive.apps.notebooks.Splash"
            android:label="@string/app_name"
            android:parentActivityName="hive.apps.notebooks.Splash" >
            
        </activity>
        <activity
            android:name="hive.apps.notebooks.Shelf"
            android:label="@string/app_name" >
        <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="hive.apps.notebooks.Glavna"
            android:label="@string/temp_notebook_name"
            android:parentActivityName="hive.apps.notebooks.Shelf" >
            <meta-data
                android:name="android.support.UI_OPTIONS"
                android:value="splitActionBarWhenNarrow" />
        </activity>
        <activity
            android:name="hive.apps.notebooks.AddNotebook"
            android:label="@string/title_add_notebook"
            android:parentActivityName="hive.apps.notebooks.Shelf"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="hive.apps.notebooks.Shelf" />
        </activity>
    </application>

</manifest>