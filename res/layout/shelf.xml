<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/shelfId"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/texture_wood"
    android:onClick="gotoNotebook"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/ShelfHolder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/row_1"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_gravity="bottom"
                android:background="@drawable/shelf"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/sample_button_go"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/notebook_darkred_300"
                    android:text="\n\n\n  Sample" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/row_2"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="@drawable/shelf"
                android:orientation="horizontal" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/row_3"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="@drawable/shelf"
                android:orientation="horizontal" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/row_4"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="@drawable/shelf"
                android:orientation="horizontal" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/row_5"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="@drawable/shelf"
                android:orientation="horizontal" >
            </LinearLayout>

            <ImageView
                android:id="@+id/Logo"
                android:layout_width="fill_parent"
                android:layout_height="150dp"
                android:background="@drawable/texture_wood"
                android:scaleType="center"
                android:src="@drawable/hive_logo_trans" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>