<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/shelfId"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/texture_wood"
    android:onClick="gotoNotebook"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        
        <LinearLayout
            android:id="@+id/EverythingHolder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:orientation="vertical" >
            
	            <LinearLayout
	            android:id="@+id/ShelfHolder"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:layout_gravity="top"
	            android:orientation="vertical" >
	            </LinearLayout>
	            
	            <LinearLayout
	            android:id="@+id/LogoHolder"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:layout_gravity="top"
	            android:orientation="vertical" >
	            
	                <ImageView
	                android:id="@+id/Logo"
	                android:layout_width="fill_parent"
	                android:layout_height="150dp"
	                android:background="@drawable/texture_wood"
	                android:scaleType="center"
	                android:src="@drawable/hive_logo_trans" />
	                
	            </LinearLayout>
	
            
        </LinearLayout>
        
    </ScrollView>

</LinearLayout>