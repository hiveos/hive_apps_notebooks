<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/texture_wood"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/notebookNameId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:hint="Notebook Name" />

    <Spinner
        android:id="@+id/notebookbgtype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/notebookNameId"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/notebookNameId" />

</RelativeLayout>