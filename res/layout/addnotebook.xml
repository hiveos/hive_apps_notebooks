<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/texture_wood"
    android:orientation="vertical"
    android:paddingBottom="40dp"
    android:paddingLeft="50dp"
    android:paddingRight="40dp"
    android:paddingTop="40dp" >

    <ImageView
        android:id="@+id/notebookcover"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentEnd="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:minHeight="150dp"
        android:minWidth="150dp" />

    <Spinner
        android:id="@+id/notebookbgtype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/notebookNameId"
        android:layout_alignRight="@+id/notebookNameId"
        android:layout_below="@+id/notebookNameId" />

    <Spinner
        android:id="@+id/notebookcovercolor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/notebookbgtype"
        android:layout_alignRight="@+id/notebookNameId"
        android:layout_below="@+id/notebookbgtype"
        android:paddingTop="10dp" />

    <EditText
        android:id="@+id/notebookNameId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/notebookcover"
        android:layout_alignTop="@+id/notebookcover"
        android:layout_marginRight="115dp"
        android:layout_marginTop="238dp"
        android:ems="10"
        android:hint="Notebook Name"
        android:paddingLeft="10dp" />

</RelativeLayout>